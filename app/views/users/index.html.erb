<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_tag users_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search], class: "search_box" %>  
  <%= submit_tag "Search", :name => nil  %>
<% end %>

<%= will_paginate %>

<ul class="users">
  <% if @users == [] %>
  	<%= render 'no_results_found' %>
  <% else %>
  	<%= render @users %>
  <% end %>
</ul>


<%= will_paginate %>